<?xml version="1.0" encoding="UTF-8"?>
<persistence 
    xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                        https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
    version="3.0">

    <persistence-unit name="ParkingPU" transaction-type="RESOURCE_LOCAL">

        <!-- Proveedor JPA para Hibernate 6 -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entidades -->
        <class>com.example.parking.entity.TarifaEntity</class>
        <class>com.example.parking.entity.ClienteEntity</class>
        <class>com.example.parking.entity.VehiculoEntity</class>
        <class>com.example.parking.entity.HistorialEntity</class>

        <!-- IMPORTANTE: Excluir clases no mapeadas -->
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <!-- Conexión a MySQL - ASEGÚRATE DE QUE LA CONTRASEÑA SEA CORRECTA -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/parkingDB?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC&amp;characterEncoding=UTF-8"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <!-- CAMBIA ESTA CONTRASEÑA POR LA CORRECTA -->
            <property name="jakarta.persistence.jdbc.password" value="Kevin12345*"/>

            <!-- Configuración Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            
            <!-- IMPORTANTE: Usar 'validate' en lugar de 'update' para evitar cambios automáticos -->
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            
            <!-- Logs detallados para debugging -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            
            <!-- Pool de conexiones -->
            <property name="hibernate.connection.pool_size" value="5"/>
            
            <!-- Performance -->
            <property name="hibernate.jdbc.batch_size" value="10"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
            
            <!-- Evitar problemas con lazy loading -->
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/>
        </properties>
    </persistence-unit>
</persistence>